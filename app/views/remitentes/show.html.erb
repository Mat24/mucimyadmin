<%- model_class = Remitente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @remitente.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre_entidad) %>:</strong></dt>
  <dd><%= @remitente.nombre_entidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_entidad) %>:</strong></dt>
  <dd><%= @remitente.tipo_entidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre_solicitante) %>:</strong></dt>
  <dd><%= @remitente.nombre_solicitante %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cargo) %>:</strong></dt>
  <dd><%= @remitente.cargo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ciudad) %>:</strong></dt>
  <dd><%= @remitente.ciudad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departamento) %>:</strong></dt>
  <dd><%= @remitente.departamento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion) %>:</strong></dt>
  <dd><%= @remitente.direccion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono) %>:</strong></dt>
  <dd><%= @remitente.telefono %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @remitente.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_solicitud) %>:</strong></dt>
  <dd><%= @remitente.fecha_solicitud %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              remitentes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_remitente_path(@remitente), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              remitente_path(@remitente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
